{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
var
//deðiþken tanýmlama yeri
sayi : Integer;
metin : String;
durum : Boolean;

begin
//deðiþkenler üzerinde iþlemlerin yapýldýðý yer
sayi := 10;
metin := 'yakup';
durum := False;

ShowMessage(
'sayi : ' + IntToStr(sayi)+
'metin : '+ metin+
' Durum :' + BoolToStr(durum,true)
);
end;

end.
