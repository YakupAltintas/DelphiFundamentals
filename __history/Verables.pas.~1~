unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
var
  // deðiþken tanýmlama yeri
  sayi: Integer;
  metin: String;
  durum: Boolean;
  yas: Integer;

begin
   // deðiþkenler üzerinde iþlemlerin yapýldýðý yer
   sayi := 10;
   metin := 'yakup';
   durum := False;

   // Ekranda mesaj göstermek için kullanýlýr
   ShowMessage('sayi : ' + IntToStr(sayi) + 'metin : ' + metin + ' Durum :' +
   BoolToStr(durum, True));
   yas := 25;
   // koþul iþafesi if else kullanýmý
   if yas > 18 then
   begin
   ShowMessage('Ehliyet alabilirisin!');
   end
   else
   ShowMessage('Ehliyet alamazsýn! ');

end;

end.
